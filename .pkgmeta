package-as: Datamine
enable-nolib-creation: no

license-output: LICENSE

externals:
  Datamine/Libs/LibStub: https://repos.wowace.com/wow/libstub/trunk
  Datamine/Libs/LibDevConsole: https://github.com/Ghostopheles/LibDevConsole
  Datamine/Libs/AceLocale-3.0: https://repos.curseforge.com/wow/ace3/trunk/AceLocale-3.0

ignore:
  - Datamine/Libs/*/*.rockspec
  - Datamine/Libs/*/*.toc
  - Datamine/Libs/*/changelog.*
  - Datamine/Libs/*/CHANGELOG.*
  - Datamine/Libs/*/docs
  - Datamine/Libs/*/examples
  - Datamine/Libs/*/README.*
  - Datamine/Libs/*/tests
  - Datamine/Libs/*/.pkgmeta
  - CHANGELOG.md
  - README.md

move-folders:
  Datamine/Datamine: Datamine
  Datamine/Datamine_Data: Datamine_Data
  Datamine/Datamine_Maps: Datamine_Maps
  Datamine/Datamine_Static: Datamine_Static

manual-changelog:
  filename: CHANGELOG.md
  markup-type: markdown